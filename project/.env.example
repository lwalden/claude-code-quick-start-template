# ==============================================================================
# Environment Configuration Template
# ==============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to source control
# ==============================================================================

# ------------------------------------------------------------------------------
# Application
# ------------------------------------------------------------------------------
APP_NAME=my-project
APP_ENV=development
# Options: development, staging, production
APP_DEBUG=true
APP_URL=http://localhost:3000
APP_PORT=3000

# ------------------------------------------------------------------------------
# Database
# ------------------------------------------------------------------------------
# PostgreSQL
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# MySQL
# DATABASE_URL=mysql://user:password@localhost:3306/dbname

# MongoDB
# MONGODB_URI=mongodb://localhost:27017/dbname

# Azure Cosmos DB
# COSMOS_CONNECTION_STRING=AccountEndpoint=https://xxx.documents.azure.com:443/;AccountKey=xxx;
# COSMOS_DATABASE_NAME=my-database

# Redis
# REDIS_URL=redis://localhost:6379
# REDIS_CONNECTION_STRING=localhost:6379,password=xxx

# ------------------------------------------------------------------------------
# Authentication / Security
# ------------------------------------------------------------------------------
# JWT_SECRET=your-256-bit-secret-key-here
# JWT_EXPIRES_IN=7d

# Session
# SESSION_SECRET=your-session-secret

# API Keys (your application's keys)
# API_KEY_SALT=random-salt-for-hashing

# ------------------------------------------------------------------------------
# Cloud Providers
# ------------------------------------------------------------------------------
# Azure
# AZURE_SUBSCRIPTION_ID=
# AZURE_TENANT_ID=
# AZURE_CLIENT_ID=
# AZURE_CLIENT_SECRET=
# AZURE_STORAGE_CONNECTION_STRING=
# APPLICATIONINSIGHTS_CONNECTION_STRING=

# AWS
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=

# Google Cloud
# GOOGLE_CLOUD_PROJECT=
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# ------------------------------------------------------------------------------
# Third-Party Services
# ------------------------------------------------------------------------------
# Stripe
# STRIPE_SECRET_KEY=sk_test_xxx
# STRIPE_PUBLISHABLE_KEY=pk_test_xxx
# STRIPE_WEBHOOK_SECRET=whsec_xxx

# SendGrid
# SENDGRID_API_KEY=SG.xxx

# Twilio
# TWILIO_ACCOUNT_SID=
# TWILIO_AUTH_TOKEN=
# TWILIO_PHONE_NUMBER=

# OpenAI
# OPENAI_API_KEY=sk-xxx

# Anthropic
# ANTHROPIC_API_KEY=sk-ant-xxx

# ------------------------------------------------------------------------------
# Messaging / Bots
# ------------------------------------------------------------------------------
# Telegram
# TELEGRAM_BOT_TOKEN=123456:ABC-xxx

# Discord
# DISCORD_BOT_TOKEN=
# DISCORD_CLIENT_ID=
# DISCORD_CLIENT_SECRET=

# Slack
# SLACK_BOT_TOKEN=xoxb-xxx
# SLACK_SIGNING_SECRET=

# ------------------------------------------------------------------------------
# Blockchain / Web3 (if applicable)
# ------------------------------------------------------------------------------
# Alchemy
# ALCHEMY_API_KEY=

# Infura
# INFURA_PROJECT_ID=
# INFURA_PROJECT_SECRET=

# Helius (Solana)
# HELIUS_API_KEY=

# Coinbase Commerce
# COINBASE_COMMERCE_API_KEY=
# COINBASE_COMMERCE_WEBHOOK_SECRET=

# ------------------------------------------------------------------------------
# Feature Flags
# ------------------------------------------------------------------------------
# FEATURE_NEW_UI=false
# FEATURE_BETA_ACCESS=false

# ------------------------------------------------------------------------------
# Logging / Monitoring
# ------------------------------------------------------------------------------
# LOG_LEVEL=debug
# Options: error, warn, info, debug, trace

# Sentry
# SENTRY_DSN=

# Datadog
# DD_API_KEY=
# DD_APP_KEY=

# ------------------------------------------------------------------------------
# Email Configuration
# ------------------------------------------------------------------------------
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASSWORD=
# EMAIL_FROM=noreply@example.com

# ------------------------------------------------------------------------------
# File Storage
# ------------------------------------------------------------------------------
# UPLOAD_DIR=/tmp/uploads
# MAX_FILE_SIZE=10485760
# Bytes: 10485760 = 10MB

# S3-compatible storage
# S3_ENDPOINT=
# S3_BUCKET=
# S3_ACCESS_KEY=
# S3_SECRET_KEY=

# ------------------------------------------------------------------------------
# Testing
# ------------------------------------------------------------------------------
# TEST_DATABASE_URL=
# TEST_API_KEY=

# ------------------------------------------------------------------------------
# Development Tools
# ------------------------------------------------------------------------------
# Hot reload
# CHOKIDAR_USEPOLLING=true

# Proxy for CORS during development
# PROXY_TARGET=http://localhost:8080
